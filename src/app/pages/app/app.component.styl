.wrapper
  width: 100%
  height: 100vh
  overflow: hidden

.nav
  width: 100%
  display: flex
  flex-direction: row
  justify-content: space-between
  padding: 10px
  color: white
  background-color: #161515

.nav-block
  display: flex
  align-items: center

  .nav-block__image
    margin: 0 10px

  .nav-block__heading
    margin: 0
    font-weight: normal

.app
  height: 100%
  width: 100%

  rsz-layout.row
    height: 100%

  rsz-layout.cell
    border-top: none

    &:nth-child(1)
      border-left: none

    &:nth-last-child(1)
      border-right: none

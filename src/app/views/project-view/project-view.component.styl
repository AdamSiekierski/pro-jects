.project-view__wrapper
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  background-color: #fafbfc

.project-view
  width: 100%
  flex: 1
  display: flex

.project-view-bar
  width: 100%
  background-color: #ffffff
  border-bottom: solid 1px #eeeeee
  display: flex
  align-items: center
  color: #161515
  padding: 2px 17px

  &__icon
    color: gray
    margin: 0 2px
    cursor: pointer

  &__icon--active
    color: black

.cards-view
  width: 100%
  height: 100%

  .card
    border: solid 1px #eeeeee
    border-radius: 5px
    background-color: #ffffff
    margin: 10px

    &__content
      padding: 0 10px

      *
        margin-top: 0
        margin-bottom: .5em

      *:last-child
        margin-bottom: 1em

    &__bar
      padding: 10px

      &__icon
        color: grey
        width: 15px
        height: 15px
        font-size: 15px
        cursor: pointer

.columns-list__wrapper
  width: 200px
  height: 100%;
  border-right: solid 1px #eeeeee
  background-color: #ffffff
  line-height: 1

  .columns-list__header
    color: gray
    font-size: 12px
    text-align: left
    margin: 3px
    display: block

  .columns-list
    text-align: center
    list-style: none
    padding: 0
    margin: 0

    &__item
      margin: 0
      width: 100%
      padding: 7px 0
      font-weight: bold
      display: block
      cursor: pointer

      &:hover
        background-color: #f5f6f7

    &__item--selected
      background-color: #f5f6f7

.no-project
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  color: grey
  font-size: 2em
  text-align center
  padding: 5px

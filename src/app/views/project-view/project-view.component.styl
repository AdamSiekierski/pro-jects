.project-view__wrapper
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  background-color: #fafbfc

.project-view-bar
  width: 100%
  background-color: #ffffff
  border-bottom: solid 1px #eeeeee
  display: flex
  align-items: center
  color: #161515
  padding: 2px 17px

  .project-view-bar__icon
    color: gray
    margin: 0 2px
    cursor: pointer

  .project-view-bar__icon--active
    color: black

.project-view
  width: 100%
  flex: 1
  display: flex

.columns-list__wrapper
  width: 200px
  height: 100%;
  border-right: solid 1px #eeeeee
  background-color: #ffffff
  line-height: 1

  .columns-list__header
    color: gray
    font-size: 12px
    text-align: left
    margin: 3px
    display: block

  .columns-list
    text-align: center
    list-style: none
    padding: 0
    margin: 0

    li
      margin: 0
      width: 100%
      padding: 7px 0
      font-weight: bold
      display: block
      cursor: pointer

      &:hover
        background-color: #f5f6f7

.no-project
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: grey;
  font-size: 2em;

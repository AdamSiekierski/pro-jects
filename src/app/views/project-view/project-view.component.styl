.project-view__wrapper
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  background-color: #fafbfc

.project-view
  width: 100%
  flex: 1
  display: flex
  overflow: auto

.project-view-bar
  width: 100%
  background-color: #ffffff
  border-bottom: solid 1px #eeeeee
  display: flex
  color: #161515
  padding: 2px 17px

  &__icon
    color: gray
    margin: 0 2px
    cursor: pointer

  &__icon--active
    color: black

.cards-view--switch-view
  width: 100%
  height: 100%
  overflow: auto

.columns-list__wrapper
  width: 200px
  height: 100%;
  border-right: solid 1px #eeeeee
  background-color: #ffffff
  line-height: 1

  .columns-list__header
    color: gray
    font-size: 12px
    padding: 3px
    display: flex
    justify-content: space-between

  .columns-list
    text-align: center
    list-style: none
    padding: 0
    margin: 0

    &__item__wrapper
      margin: 0
      width: 100%
      display: block
      position: relative

      ^[1]__item
        padding: 7px 0;
        display: inline-block;
        width: 100%;
        cursor: pointer;
        font-weight: bold

      .delete-button
        visibility: hidden
        display: inline-flex
        align-items: center
        cursor: pointer
        height: 100%
        margin-right: 1px
        position: absolute
        right: 0
        -webkit-font-feature-settings: 'liga'
        font-family: 'Material Icons'
        color: #d3d4d5

        &:hover
          color: #b1b2b3

      &:hover
        background-color: #f5f6f7

        .delete-button
          visibility: visible

    &__item__wrapper--selected
      background-color: #f5f6f7


.cards-view__add-button
  display: block
  padding: 6px 12px
  line-height: 20px
  white-space: nowrap
  vertical-align: middle
  cursor: pointer
  user-select: none
  background-repeat: repeat-x
  background-position: -1px -1px
  background-size: 110% 110%
  border: 1px solid rgba(0,0,0,0.2)
  border-radius: 0.25em
  appearance: none
  color: white
  background: linear-gradient(-180deg,#34d058,#28a745 90%)
  margin: 5px auto



.no-project
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  color: grey
  font-size: 2em
  text-align center
  padding: 5px

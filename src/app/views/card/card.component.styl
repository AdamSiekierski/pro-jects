.card
  border: solid 1px #eeeeee
  border-radius: 5px
  background-color: #ffffff
  margin: 10px

  &__content
    padding: 0 10px

    *
      margin-top: 0
      margin-bottom: .5em

    *:last-child
      margin-bottom: 1em

  &__bar
    padding: 10px
    display: flex
    justify-content: space-between

    &__icon
      color: grey
      width: 15px
      height: 15px
      font-size: 15px
      cursor: pointer

  &__editor
    height: 70vh

    .editor-container
      height: 100% !important;

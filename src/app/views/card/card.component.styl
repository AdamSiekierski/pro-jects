.card
  border: solid 1px #eeeeee
  border-radius: 5px
  background-color: #ffffff
  margin: 10px

  &__content
    padding: 0 10px

    *
      margin-top: 0
      margin-bottom: .5em

    *:last-child
      margin-bottom: 10px

  &__bar
    padding: 10px
    display: flex
    justify-content: space-between

    &__icon
      color: grey
      width: 15px
      height: 15px
      font-size: 15px
      cursor: pointer
      margin: 0 1px

      &--big
        width: 20px
        height: 20px
        font-size: 20px
        margin: 0 2px

    .icon__done
      &:hover
        color: #28a745

    .icon__close
      &:hover
        color: #d73a49

    .icon__save
      &:hover
        color: #24292e

  &__editor
    height: 70vh

    .editor-container
      height: 100% !important;
